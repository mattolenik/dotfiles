#!/usr/bin/env bash
set -euo pipefail

config_path="$HOME/.config/httpreq/sites.json"

main() {
  local auth base_url content_type site_name
  local method="$1"
  local url="$2"
  shift 2
  url="${url/#\//}"
  site_name="${url%%/*}"
  url="${url#*/}"
  if [[ ${method,,} == get ]]; then
    method=--get
  fi

  auth="$(config ".$site_name.auth")"
  base_url="$(config ".$site_name.url")"
  content_type="$(config ".$site_name.content_type")"

  if [[ -z $base_url ]]; then
    echo "Must set url in $config_path"; exit 1
  fi
  curl -w '%{http_code}\n%{url}\n' $method "$base_url/$url" ${auth:+-H "Authorization: $auth"} ${content_type:+-H "Content-Type: $content_type"} ${@/#/--data-urlencode }
}

config() {
  jq -r "$1" "$config_path"
}

main "$@"
